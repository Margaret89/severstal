extends ../layout/main

block variables
	- var title = 'Главная';

block content
	section.top-block.mb-indent
		.container.container_indent
			.row
				.col-lg-6.col-xl-4
					.top-block__main
						.top-block__info
							.top-block__title Займы онлайн в&nbsp;Северодвинске
							.top-block__text Деньги без справок и поручителей без залога и переплат

						form.form-calc
							.form-calc__fields
								.form-calc__item
									.range.js-range
										.range__title Сумма кредита

										.range__field
											input.js-slider-range-min#slider-range-sum-credit-val(type="text", placeholder="1000")
											.range__currency &#8381;

										#slider-range-sum-credit.js-slider-range(data-min="500000", data-max="20000000", data-cur-min="2486000", data-step="1", autocomplete="off")

										.range__scale
											.range__min.js-range-min(data-label="&#8381;")
											.range__max.js-range-max(data-label="&#8381;")

								.form-calc__item
									.range.js-range
										.range__title Срок кредита

										.range__field
											input.js-slider-range-min#slider-range-time-credit-val(type="text", placeholder="1")
											.range__currency Мес.

										#slider-range-time-credit.js-slider-range(data-min="1", data-max="7", data-cur-min="2", data-step="1", autocomplete="off")

										.range__scale
											.range__min.js-range-min(data-label="год")
											.range__max.js-range-max(data-label="год")

							.form-calc-res
								.form-calc-res__content
									.form-calc-res__label Всего к&nbsp;возврату
									.form-calc-res__price 5 170 &#8381;

								.form-calc-res__btn
									input.btn(type="submit", value="Продолжить")

				.col-lg-6.col-xl-7.offset-xl-1
					.contact
						.map-wrap
							.map-wrap__content
								#map.map
							script(src='http://api-maps.yandex.ru/2.1/?lang=ru_RU' type='text/javascript')
					
						.contact-list
							.contact-list__item
								.contact-list__icon
									+svg('ic-address','ic-address', '16', '20')
								.contact-list__content
									.contact-list__label Главный офис:
									.contact-list__text 164500 Архангельская область, г. Северодвинск, ул. ул. Карла Маркса, 30.
							
							.contact-list__item
								.contact-list__icon
									+svg('ic-arrow-circle','ic-arrow-circle', '19', '20')
								.contact-list__content
									.contact-list__top
										.contact-list__label Как добраться:

										.switch.js-switch
											.switch__text.js-switch-text-left Пешком

											label.switch__label
												input.js-choose-path(type="checkbox")
												.switch__content
													.switch__marker

											.switch__text.js-switch-text-right На машине


									.contact-list__text
										.contact-list__path.js-path-foot Пешком, от остановки Карла маркса ,300 метров во двор. вход через арку
										.contact-list__path.js-path-car(style="display: none;") На машине

	section.m-indent
		.container
			.row
				.col-12
					.info-block
						.info-block__title Отделения в&nbsp;регионе

						a(href="#").btn Все отделения

	section.mark-wrap.m-indent.p-indent
		.container
			.row
				.col-12
					h2.h1 Рейтинг компании

					.mark-wrap__content
						.mark-wrap__label Нас оценили!

						.mark-wrap__list
							-
								var list=[
									{logo:'ya.jpg', num:'4.7', text:'Оценок : 10', width:'80'},
									{logo:'zoon.png', num:'4.7', text:'Оценок : 10', width:'80'},
									{logo:'yahoo.jpg', num:'5.0', text:'Оценок : 10', width:'100'},
								]

							each item in list
								.mark
									.mark__icon
										img(src="assets/img/"+item.logo, alt="")

									.mark__content
										.mark__rating
											.mark__num= item.num 

											.rating
												.rating__content(style="width:"+item.width+"%")

										.mark__text= item.text

	section.stock-main.m-indent
		.container
			.row
				.col-12
					h2.h1 Акции

		.stock-list
			.container
				.row
					-
						var list=[
							{img:'stock1.jpg', title:'Кредит по ставке 12% ', text:'На любые цели, без поручителей. Деньги на руки за 5 минут!'},
							{img:'stock2.jpg', title:'Понижение ставки на кредиты для бизнеса'},
						]
					each item in list
						.col-lg-6
							.stock-item
								.stock-item__img(style="background-image: url(/assets/img/"+item.img+")")
								
								.stock-item__content
									.stock-item__title= item.title

									if(item.text)
										.stock-item__text= item.text

									.stock-item__more
										a(href="#") Подробнее
											+svg('ic-arrow-right','ic-arrow-right', '14', '11')

				.row
					.col-12
						.stock-list__btn
							a(href="#").btn Все акции

	section.mt-indent.bg-light-blue.p-indent
		.container
			.row
				.col-12
					.page-info
